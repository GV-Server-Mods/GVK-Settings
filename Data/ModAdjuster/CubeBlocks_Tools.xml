<?xml version="1.0" encoding="utf-8"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
	<CubeBlocks>
		<!-- Double radius, improve impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>LargeShipWelder</SubtypeId>
			</Id>
			<SensorRadius>4</SensorRadius>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- disable small grid welder -->
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition" enabled="true">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>SmallShipWelder</SubtypeId>
			</Id>
			<SensorRadius>0.1</SensorRadius> <!-- vanilla 1.3 -->
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>LargeShipWelderReskin</SubtypeId>
			</Id>
			<SensorRadius>4</SensorRadius>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- disable small grid welder -->
		<Definition xsi:type="MyObjectBuilder_ShipWelderDefinition" enabled="true">
			<Id>
				<TypeId>ShipWelder</TypeId>
				<SubtypeId>SmallShipWelderReskin</SubtypeId>
			</Id>
			<SensorRadius>0.1</SensorRadius> <!-- vanilla 1.3 -->
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- adjust proto drill comps -->
        <Definition xsi:type="MyObjectBuilder_ShipDrillDefinition">
            <Id>
                <TypeId>Drill</TypeId>
                <SubtypeId>LargeBlockPrototechDrill</SubtypeId>
            </Id>
			<DisplayName>Advanced Ship Drill</DisplayName>
            <Components>
                <Component Subtype="SteelPlate" Count="180" />
				<Component Subtype="PrototechMachinery" Count="5"/>
                <Component Subtype="Construction" Count="40" />
                <Component Subtype="LargeTube" Count="12" />
                <Component Subtype="Motor" Count="5" />
                <Component Subtype="Computer" Count="5" />
                <Component Subtype="SteelPlate" Count="120" />
            </Components>
            <CriticalComponent Subtype="Computer" Index="0" />
        </Definition>
		<!-- Slightly increase drill size and increase impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipDrillDefinition">
			<Id>
				<TypeId>Drill</TypeId>
				<SubtypeId>SmallBlockDrill</SubtypeId>
			</Id>
			<SensorRadius>1.5</SensorRadius>
			<SensorOffset>0.8</SensorOffset>
			<CutOutRadius>1.5</CutOutRadius>
			<CutOutOffset>0.6</CutOutOffset>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- Slightly increase drill size and increase impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipDrillDefinition">
			<Id>
				<TypeId>Drill</TypeId>
				<SubtypeId>LargeBlockDrill</SubtypeId>
			</Id>
			<SensorRadius>2.1</SensorRadius>
			<SensorOffset>2.8</SensorOffset>
			<CutOutRadius>2.1</CutOutRadius>
			<CutOutOffset>2.8</CutOutOffset>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
        <Definition xsi:type="MyObjectBuilder_ShipDrillDefinition">
            <Id>
                <TypeId>Drill</TypeId>
                <SubtypeId>LargeBlockPrototechDrill</SubtypeId>
            </Id>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
        </Definition>
		<!-- double grinder size, increase offset, increase impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipGrinderDefinition">
			<Id>
				<TypeId>ShipGrinder</TypeId>
				<SubtypeId>LargeShipGrinder</SubtypeId>
			</Id>
			<SensorRadius>2.8</SensorRadius>
			<SensorOffset>1.0</SensorOffset>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- double grinder size, increase offset, increase impact resistance -->
		<Definition xsi:type="MyObjectBuilder_ShipGrinderDefinition">
			<Id>
				<TypeId>ShipGrinder</TypeId>
				<SubtypeId>SmallShipGrinder</SubtypeId>
			</Id>
			<SensorRadius>2.6</SensorRadius>
			<SensorOffset>1</SensorOffset>
			<DeformationRatio>0.2</DeformationRatio>
			<UsesDeformation>false</UsesDeformation>
		</Definition>
		<!-- added to increase range and prevent modded clients from changing this -->
		<Definition xsi:type="MyObjectBuilder_OreDetectorDefinition">
			<Id>
				<TypeId>OreDetector</TypeId>
				<SubtypeId>LargeOreDetector</SubtypeId>
			</Id>
			<MaximumRange>200</MaximumRange>
		</Definition>
		<!-- added to increase range and prevent modded clients from changing this -->
		<Definition xsi:type="MyObjectBuilder_OreDetectorDefinition">
			<Id>
				<TypeId>OreDetector</TypeId>
				<SubtypeId>SmallBlockOreDetector</SubtypeId>
			</Id>
			<MaximumRange>100</MaximumRange>
		</Definition>
 	</CubeBlocks>
</Definitions>
