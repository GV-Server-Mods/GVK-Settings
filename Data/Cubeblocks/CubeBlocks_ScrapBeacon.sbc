                <MountPoint Side="Right" StartX="0.00" StartY="0.00" EndX="1.00" EndY="2.00"/>
                <MountPoint Side="Bottom" StartX="0.00" StartY="0.00" EndX="1.00" EndY="1.00"/>
            </MountPoints>
			<!-- Build stages must be removed so beacon is always functional -->
            <!--<BuildProgressModels>
                <Model BuildPercentUpperBound="0.50" File="Models\Cubes\small\SmallScrapBeacon_BS1.mwm"/>
                <Model BuildPercentUpperBound="1.00" File="Models\Cubes\small\SmallScrapBeacon_BS2.mwm"/>
            </BuildProgressModels>-->
            <BlockPairName>ScrapBeacon</BlockPairName>
            <MirroringY>Z</MirroringY>
            <EdgeType>Light</EdgeType>
            <BuildTimeSeconds>15</BuildTimeSeconds>
            <DamageEffectName>Damage_Electrical_Damaged</DamageEffectName>
            <DamagedSound>ParticleElectrical</DamagedSound>
            <ResourceSinkGroup>Utility</ResourceSinkGroup>
            <MaxBroadcastRadius>2000</MaxBroadcastRadius>
            <Flare>ScrapBeaconSmall</Flare>
            <MaxBroadcastPowerDrainkW>10</MaxBroadcastPowerDrainkW>
            <EmissiveColorPreset>ScrapBeacon</EmissiveColorPreset>
            <DestroyEffect>BlockDestroyedExplosion_Small</DestroyEffect>
            <DestroySound>WepSmallWarheadExpl</DestroySound>
            <PCU>50</PCU>
            <IsAirTight>false</IsAirTight>
			<GuiVisible>true</GuiVisible>
			<Public>true</Public>
        </Definition>
    </CubeBlocks>
</Definitions>
